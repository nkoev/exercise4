<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="home.kpmg.exercise4.controller.Details"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page titleAlignment="Center" title="Event Details">
		<List>
			<InputListItem label="Event">
				<Input id="name" value="{EventName}" enabled="false"/>
			</InputListItem>
			<InputListItem label="Location">
				<Input id="location" value="{City}" enabled="false"/>
			</InputListItem>
		</List>
		<Button id="edit" text="Edit" press="onEdit"></Button>
		<Button id="save" text="Save" press="onSave" visible="false"></Button>
	</Page>
</mvc:View>